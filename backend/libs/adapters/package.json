{
  "name": "@app/adapters",
  "version": "0.1.0",
  "private": true,
  "description": "Lightweight adapter registry, Koyfin REST client, and storage utils â€” zero-dependency runtime.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./index": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./koyfin": {
      "types": "./dist/koyfin.d.ts",
      "import": "./dist/koyfin.js"
    },
    "./storage": {
      "types": "./dist/storage.d.ts",
      "import": "./dist/storage.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist || rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json -w",
    "check": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.17"
  }
}