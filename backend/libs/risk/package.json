{
  "name": "@app/risk",
  "version": "0.1.0",
  "private": true,
  "description": "Pure, zero-dependency risk toolkit (VaR/ES, stress testing, limits).",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./limits": {
      "types": "./dist/limits.d.ts",
      "default": "./dist/limits.js"
    },
    "./stress": {
      "types": "./dist/stress.d.ts",
      "default": "./dist/stress.js"
    },
    "./var": {
      "types": "./dist/var.d.ts",
      "default": "./dist/var.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "check": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {},
  "devDependencies": {}
}