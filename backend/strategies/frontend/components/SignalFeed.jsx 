import React, { useEffect, useState } from "react";
import axios from "axios";

const SignalFeed = () => {
  const [signals, setSignals] = useState([]);

  const fetchSignals = async () => {
    try {
      const res = await axios.get("/api/signals/feed"); // Your backend should serve this
      setSignals(res.data);
    } catch (err) {
      console.error("Error fetching signals:", err);
    }
  };

  useEffect(() => {
    fetchSignals();
    const interval = setInterval(fetchSignals, 30000); // Refresh every 30 seconds
    return () => clearInterval(interval);
  }, []);

  return (
    <div className="bg-white p-4 rounded-xl shadow-lg w-full">
      <h2 className="text-xl font-bold mb-4">Live Signal Feed</h2>
      <div className="max-h-96 overflow-y-auto">
        {signals.length === 0 ? (
          <p className="text-gray-400">No signals yet.</p>
        ) : (
          signals.map((signal, index) => (
            <div
              key={index}
              className="border-b py-2 flex justify-between items-center hover:bg-gray-50"
            >
              <div>
                <p className="font-semibold">
                  {signal.asset} –{" "}
                  <span
                    className={`${
                      signal.signal_type === "BUY"
                        ? "text-green-600"
                        : "text-red-500"
                    }`}
                  >
                    {signal.signal_type}
                  </span>
                </p>
                <p className="text-sm text-gray-500">
                  Strategy: {signal.strategy} • Confidence:{" "}
                  {(signal.confidence * 100).toFixed(1)}%
                </p>
              </div>
              <span className="text-xs text-gray-400">
                {new Date(signal.timestamp).toLocaleTimeString()}
              </span>
            </div>
          ))
        )}
      </div>
    </div>
  );
};

export default SignalFeed;