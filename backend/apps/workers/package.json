{
  "name": "@app/workers",
  "version": "0.1.0",
  "private": true,
  "description": "Background workers (news fetch, alerts dispatch, stress trigger). No runtime deps.",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --clean --out-dir dist",
    "dev": "tsup src/index.ts --format esm,cjs --dts --sourcemap --watch --out-dir dist",
    "typecheck": "tsc --noEmit",
    "start": "node ./dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "UNLICENSED"
}